<div class="login">
  <div class="content" layout="row" layout-align="center center">
    <div class="md-whiteframe-6dp login-box">
      <p class="md-display-1" layout="row" layout-align="center center">LOGIN</p>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <md-input-container>
          <%= f.label :email, "E-mail" %>
          <%= f.email_field :email, autofocus: true %>
        </md-input-container>

        <md-input-container>
          <%= f.label :password, "Senha" %>
          <%= f.password_field :password, autocomplete: "off" %>
        </md-input-container>

        <% if devise_mapping.rememberable? -%>
          <div layout="row" layout-align="center center">
            <md-input-container layout="row">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "Lembrar minha senha" %>
            </md-input-container>
          </div>
        <% end -%>

        <div layout="row" layout-align="center center">
          <%= f.submit "Entrar", :class => "md-button md-raised md-accent" %>
        </div>
      <% end %>

      <div layout="row" layout-align="center center">
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Cadastrar", new_registration_path(resource_name), :class => "md-button" %>
        <% end -%>

        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Esqueci minha senha", new_password_path(resource_name), :class => "md-button" %>
        <% end -%>
      </div>
    </div>
  </div>
</div>