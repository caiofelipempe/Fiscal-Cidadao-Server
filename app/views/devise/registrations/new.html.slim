div class="login"
  div class="content"
    .mdl-layout.mdl-js-layout
      main.mdl-layout__content
        .mdl-card.mdl-shadow--8dp
          .mdl-card__title.mdl-color--primary.mdl-color-text--white
            h1.mdl-card__title-text Cadastro
          .mdl-card__supporting-text
            = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
              .mdl-textfield.mdl-js-textfield
                = f.label :login, "UsuÃ¡rio", :class => "mdl-textfield__label"
                = f.email_field :login, autofocus: true, :class => "mdl-textfield__input"

              .mdl-textfield.mdl-js-textfield
                = f.label :email, "E-Mail", :class => "mdl-textfield__label"
                = f.email_field :email, :class => "mdl-textfield__input"

              .mdl-textfield.mdl-js-textfield
                = f.label :password, "Senha", :class => "mdl-textfield__label"
                = f.password_field :password, autocomplete: "off", :class => "mdl-textfield__input"
                - if @minimum_password_length
                  p
                    ' (Minimo de #{@minimum_password_length} caracteres)

              .mdl-textfield.mdl-js-textfield
                = f.label :password_confirmation, "Confirmar Senha", :class => "mdl-textfield__label"
                = f.password_field :password_confirmation, autocomplete: "off", :class => "mdl-textfield__input"

              .text-center    
                = f.submit "Cadastrar", :class => "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent"

          .mdl-card__actions.mdl-card--border.text-center
            = link_to "Fazer Login", new_session_path(resource_name), :class => "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"

            - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
              = link_to "Esqueci minha senha", new_password_path(resource_name), :class => "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"
