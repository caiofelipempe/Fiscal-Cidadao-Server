<div class="title-subheader">
  <h2 class="md-display-1"><span class="ca ca-issue"></span> Problemas reportados</h2>
</div>  

<md-content>
  <md-list ng-clock="">
    <% @issue_reports.each do |issue_report| %>
      <md-list-item class="md-3-line md-long-text">
        <% if issue_report.image.url != '/images/original/missing.png' %>
          <%= image_tag(issue_report.image.url(:thumb), :class => "md-avatar") %>
        <% else %>
          <%= image_tag("missing.jpg", :class => "md-avatar") %>
        <% end %>
        <div class="md-list-item-text" layout="column">
          <% if issue_report.issue_id != nil %>
            <h3><%= Issue.find(issue_report.issue_id).name %></h3>
          <% else %>
            <h3>Outro</h3>
          <% end %>
          <p><%= truncate(issue_report.description, :length => 120) %></p>
          <div layout="row" layout-align="start center">  
            <small><span class="ca ca-place"></span> <%= issue_report.address %></small>
            <small layout-margin=""><span class="ca ca-calendar"></span> <%= issue_report.created_at.strftime("%d/%m/%Y Ã s %H:%M") %></small>
          </div>
          <%= link_to nil, :class => "md-button md-icon-button md-secondary" do %>
            <span class="ca ca-response"></span>
          <% end %>
        </div>
      </md-list-item>
      <md-divider>
    <% end %>  
  </md-list>
</md-content>
