.title-subheader
  h2.display-1
    span.ca.ca-issue
    '  Problemas reportados

.mdl-tabs.mdl-js-tabs.mdl-js-ripple-effect
  .mdl-tabs__tab-bar
    a.mdl-tabs__tab.is-active href="#problemas_relatados" style="width: 50%;"  Problemas relatados
    a.mdl-tabs__tab href="#problemas_resolvidos" style="width: 50%;" Problemas resolvidos
  #problemas_relatados.mdl-tabs__panel.is-active

    div class="mdl-grid"
      - @issue_reports.each do |issue_report|
        .info-card-wide.mdl-card.mdl-shadow--2dp.mdl-cell.mdl-cell--4-col
          - if (issue_report.image.url != '/images/original/missing.png')
            .mdl-card__title style="background-image: url(#{image_url(issue_report.image.url(:thumb))});"
              h2.mdl-card__title-text 
                - if issue_report.issue_id != nil
                  = Issue.find(issue_report.issue_id).name
                - else  
                  ' Outro
          - else
            .mdl-card__title style="background-image: url(#{image_url('missing.jpg')});"
              h2.mdl-card__title-text 
                - if issue_report.issue_id != nil
                  = Issue.find(issue_report.issue_id).name
                - else  
                  ' Outro

          .mdl-card__supporting-date
            span class="ca ca-calendar"
            = " " + issue_report.created_at.strftime("%d/%m/%Y Ã s %H:%M")
          .mdl-card__supporting-text
            = truncate(issue_report.description, :length => 120)
          .mdl-card__actions.mdl-card--border
            a.mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect
              span class="ca ca-place"
              = " " + issue_report.address
          .mdl-card__menu
            span.mdl-button.mdl-button--icon.mdl-js-button.mdl-js-ripple-effect.btn-padding  id="e-by-#{issue_report.id}"
              i.ca.ca-user
            div class="mdl-tooltip" for="e-by-#{issue_report.id}"
              ' Enviado por: 
              = issue_report.user.login
            = link_to issue_report, :class => "btn-padding mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect", :id => "resp-#{issue_report.id}" do
              i.ca.ca-response-2
            div class="mdl-tooltip" for="resp-#{issue_report.id}"
              ' Ver detalhes e responder

  #problemas_resolvidos.mdl-tabs__panel
    md-content class="md-padding"
      h1 class="md-display-2"
        ' Listar problemas aqui